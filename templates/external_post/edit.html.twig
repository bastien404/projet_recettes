{# templates/external_post/edit.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Modifier le Post Externe (ID:
	{{ post_id }})
{% endblock %}

{% block body %}
	<div class="container mx-auto px-4 py-8 max-w-2xl">
		<h1 class="text-3xl font-bold text-gray-800 mb-6">Modifier le Post Externe #{{ post_id }}</h1>

		{# Affichage des messages Flash #}
		{% include 'partials/_flash_messages.html.twig' %}
		{# Optionnel: factoriser les flash messages #}


		<div class="bg-white p-8 rounded-lg shadow-lg">
			{{ form_start(form) }}
			<div class="mb-4">
				{{ form_label(form.title) }}
				{{ form_widget(form.title) }}
				<div class="text-red-500 text-xs italic mt-1">{{ form_errors(form.title) }}</div>
			</div>
			<div class="mb-6">
				{{ form_label(form.body) }}
				{{ form_widget(form.body) }}
				<div class="text-red-500 text-xs italic mt-1">{{ form_errors(form.body) }}</div>
			</div>
			<div class="flex items-center justify-between">
				<button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
					Enregistrer les Modifications
				</button>
				<a href="{{ path('app_external_posts_show', {'id': post_id}) }}" class="inline-block align-baseline font-bold text-sm text-gray-600 hover:text-gray-800">
					Annuler
				</a>
			</div>
			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}
